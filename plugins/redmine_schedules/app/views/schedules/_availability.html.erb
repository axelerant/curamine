<% if hours > 0 %>
    <li class="availability_entry" style="min-height: <%= 2.7*hours %>em">
        <div title="<%= ScheduleCompatibility::I18n.lwr(:label_f_hour, :value => hours) %>">
            <% if @project.nil? %><em><%= l(:label_schedules_available) %></em><% end %>
            <% if @project.nil? && @user.nil? %><br/><% end %>
            <%= link_to user, :controller => 'schedules', :action => 'index', :date => day, :user_id => user.id if @user.nil? %>  <p>(<%= hours %> h)</p>
        </div>
    </li>
<% end %>
